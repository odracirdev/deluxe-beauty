---
import Button from "@components/Button.astro";
import Header from "@components/Header.astro";

const { img, title, duration, price, booking } = Astro.props;
---

<main>
  <Header title={title} />
  <section class="service">
    <img src={img} alt={title} />
    <article class="details">
      <div class="time-price">
        <p><strong>Duraci√≥n:</strong> {duration}</p>
        <p><strong>Valor:</strong> {price}</p>
      </div>
      <Button href={booking} color="pink-black">Agendar</Button>
    </article>
    <article class="description">
      <slot />
      <Button href={booking} color="pink-black">Agendar</Button>
    </article>
  </section>
</main>

<style>
  .service {
    max-width: 60rem;
    padding: 1.5rem 1rem;
    margin: 0 auto;

    & img {
      aspect-ratio: 4 / 3;
      border-radius: 1rem;
      border: 2px solid var(--black);

      @media (width >= 768px) {
        aspect-ratio: 16 / 9;
      }
    }

    & h1 {
      font-size: 2.25rem;
      line-height: 1;
    }

    & h2,
    h3 {
      margin-top: 1rem;
    }

    & article {
      display: flex;
    }

    & .details {
      justify-content: space-between;
      align-items: center;
      padding: 1rem 0;

      & p {
        font-size: 1.25rem;
        line-height: 1.4;
      }
    }

    & .description {
      flex-direction: column;
      gap: 0.5rem;
      text-wrap: balance;
    }
  }
</style>
