---
const { title, desc } = Astro.props;
---

<header>
  <h2>{title}</h2>
  <p>{desc}</p>
</header>

<style>
  header {
    width: 100dvw;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-image: url(/images/pattern-4.avif);
    background-size: contain;
    padding: 3rem 1rem 6.25rem;

    & h2 {
      color: var(--primary-color);
      margin-bottom: 2rem;
    }

    & p {
      color: var(--white);
    }
  }

  @media (width >= 768px) {
    header {
      & p {
        max-width: 60rem;
        text-wrap: balance;
      }
    }
  }
</style>
