---
const { href } = Astro.props;
---

<a href={href} target="_self" rel="noopener noreferrer">
  <slot />
</a>

<style>
  a {
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    width: 160px;
    height: 40px;
    background-color: #fff;
    color: var(--primary-color);
    border: none;
    border-radius: 999999px;
    box-shadow:
      0px 4px 20px #ccc4,
      0px 2px 6px #ccc4;
  }
</style>
