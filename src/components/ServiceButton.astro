---
const { slug, size, pos, name } = Astro.props;
---

<div class:list={["button-service", pos ? "Top" : "Mid"]}>
  <h3>{name}</h3>
  <a
    href={slug}
    target="_self"
    rel="noopener noreferrer"
    class:list={["anchor", size ? "L" : "S"]}
  >
    <slot />
  </a>
</div>

<style>
  .button-service {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: fit-content;
  }

  h3 {
    background-color: var(--white);
    padding: 0.2rem 1rem;
    border-radius: 0.7rem 0.7rem 0 0;
  }

  a {
    width: 100%;
    padding: 0.2rem 0;
    background-color: var(--primary-color);
    border-radius: 0 0 0.7rem 0.7rem;
    text-decoration: none;
  }

  .Top {
    margin-top: -4rem;

    & h3 {
      font-size: 1.25rem;
    }

    & a {
      font-size: 0.9rem;
    }
  }

  .Mid {
    margin-top: -3rem;

    & h3 {
      font-size: 1rem;
      width: 124px;
      padding: 0.2rem 0.9rem;
      line-height: 1;
    }

    & a {
      font-size: 0.75rem;
      width: 124px;
    }
  }
</style>
