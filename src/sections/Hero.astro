---
// import SliderItem from "@components/SliderItem.astro";
import Button from "@components/Button.astro";
---

<section class="hero">
  <div class="embla">
    <div class="embla__container">
      <div class="embla__slide slide-1">
        <div class="slide__container">
          <h2>Manicure Permanente 2 Amigas</h2>
          <Button
            href="/servicios/promociones/manicure-permanente-amigas"
            color="pink-black">Ver Promoción</Button
          >
        </div>
      </div>
      <div class="embla__slide slide-2">
        <div class="slide__container">
          <h2>Perfilado de Cejas + Lifting de Pestañas</h2>
          <Button
            href="/servicios/promociones/perfilado-de-cejas-y-lifting-de-pestanas"
            color="pink-black">Ver Promoción</Button
          >
        </div>
      </div>
      <div class="embla__slide slide-3">
        <div class="slide__container">
          <h2>Lifting de Pestañas + Manicure Permanente</h2>
          <Button
            href="/servicios/promociones/lifting-de-pestanas-y-manicure-permanente"
            color="pink-black">Ver Promoción</Button
          >
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    & .embla {
      overflow: hidden;
      height: 400px;

      & .embla__container {
        display: flex;
        height: 100%;

        & .embla__slide {
          flex: 0 0 100%;
          min-width: 0;

          & .slide__container {
            height: 100%;
            max-width: 60rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 1.5rem;
            gap: 1rem;
            margin: 0 auto;
          }

          & h2 {
            color: var(--white);
            text-shadow: #000000 1px 0 10px;
          }
        }

        & .slide-1 {
          background-image: url("/images/promo-manicure-2-amigas.avif");
          background-size: cover;
          background-position: center center;
        }

        & .slide-2 {
          background-image: url("/images/promo-perfilado-de-cejas-lifting-de-de-pestanas.avif");
          background-size: cover;
          background-position: center center;
        }

        & .slide-3 {
          background-image: url("/images/promo-lifting-de-pestanas-y-manicure-permanente.avif");
          background-size: cover;
          background-position: center center;
        }
      }
    }
  }
</style>

<script>
  import EmblaCarousel from "embla-carousel";
  import Autoplay from "embla-carousel-autoplay";

  const emblaNode = document.querySelector(".embla") as HTMLElement;
  const options = { loop: false };
  const plugins = [Autoplay()];
  EmblaCarousel(emblaNode, options, plugins);
</script>
