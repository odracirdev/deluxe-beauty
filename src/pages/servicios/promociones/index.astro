---
import Layout from "@layouts/Layout.astro";
import Booking from "@sections/Booking.astro";
import ServiceCard from "@components/ServiceCard.astro";
import Header from "@components/Header.astro";
import Services from "@components/Services.astro";
import { getCollection } from "astro:content";

const options = {
  title: "Promociones - Deluxe Beauty",
  description: "Una descripci√≥n que tengo que editar",
};

const services = await getCollection("promociones");
---

<Layout options={options}>
  <main>
    <section class="service__list">
      <Header title="Promociones" />

      <Services>
        {
          services.map((service) => {
            const { slug, data } = service;
            const { name, img, duration, price, booking } = data;

            return (
              <ServiceCard
                img={img}
                name={name}
                duration={duration}
                price={price}
                info={slug}
                booking={booking}
              />
            );
          })
        }
      </Services>
    </section>

    <Booking />
  </main>
</Layout>

<style>
  .service__list {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @media (width >= 768px) {
    .service__list {
      max-width: 60rem;
      margin: 0 auto;
    }
  }
</style>
