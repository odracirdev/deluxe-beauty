---
const { type } = Astro.props;
---

<article class:list={["cols", type ? "services" : " "]}>
  <slot />
</article>

<style>
  article {
    padding: 2rem 1rem;
  }

  .cols {
    display: grid;
    place-items: center;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .services {
    width: 100%;
    background-color: var(--white);
    border-radius: 2rem;
    margin-top: -3rem;
    padding-bottom: 5rem;
  }

  @media (width >= 768px) {
    .cols {
      grid-template-columns: 1fr 1fr 1fr;
      max-width: 60rem;
    }
  }
</style>
