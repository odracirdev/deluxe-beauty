---
import Button from "@components/Button.astro";
import FeatureCard from "@components/FeatureCard.astro";
import ServiceCategories from "@components/ServiceCategories.astro";
import { featuredServices } from "@data/feature-services.data";
---

<section class="categories">
  <h2>Tus servicios favoritos</h2>
  <p>
    Descubre una experiencia de belleza personalizada con nuestros servicios. <strong
      >¡Dedícate un momento para sentirte y verte increíble!</strong
    >
  </p>

  <ServiceCategories>
    {
      featuredServices.map(({ image, name, slug }) => (
        <FeatureCard image={image} name={name} slug={slug} pos>
          Ver Servicios
        </FeatureCard>
      ))
    }
  </ServiceCategories>
  <Button href="/servicios" color="white-pink">Ver todos los servicios</Button>
</section>

<style>
  .categories {
    padding: 1.5rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;

    & h2 {
      margin-bottom: 1rem;
    }
  }

  @media (width >= 768px) {
    .categories {
      max-width: 60rem;
      margin: 0 auto;

      & p {
        text-wrap: balance;
      }
    }
  }
</style>
